[Unit]
Description=HFR firewall based on iptables
#ConditionPathExists=/etc/hfr/net_layout
After=network.target

[Service]
Type=oneshot
RemainAfterExit=yes
ExecStart=/home/admim/firewall/firewall.sh start
ExecReload=/home/admim/firewall/firewall.sh reload
ExecStop=/home/admim/firewall/firewall.sh stop
User=root

[Install]
WantedBy=multi-user.target
